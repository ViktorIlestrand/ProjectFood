@model ProjectFood.Models.ViewModels.UserVM.LoginVM

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        padding-top: 130px;
    }
</style>
<body>
    <div>
        <h1 class="col-md-offset-5">Logga in</h1>
        <br />
        <br />
        <div class="row">
            <div class="col-md-8">

                <form asp-controller="user" asp-action="login" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="col-md-6 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-md-6 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-6 col-md-10">
                            <button type="submit" class="btn btn-default">Logga in</button>
                        </div>
                    </div>
                    <br />
                    <p class="col-md-offset-6 col-md-10">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrera ny användare?</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</body>
 