@model ProjectFood.Models.ViewModels.UserVM.MyKitchenVM

@{
    ViewData["Title"] = "MyKitchen";
}
<style>
    body {
        padding-top: 130px;
    }
</style>




<div class="ui-widget">
    <label for="myFood">Sök Matvara: </label>
    <input id="myFood">

</div>


<div class="ui-widget" style="margin-top:2em; font-family:Arial">
    MAT
    <table id="log" style="height: 200px; width: 300px;" class="ui-widget-content">
        @{int index = 0; }
        <tr> <th>Råvara</th> <th>Utgångsdatum</th><th>Ta bort</th> </tr>
        @{foreach (var item in Model.MyFood)
            {
                var date = item.Expires != null && item.Expires.ToString().Length > 9 ? item.Expires.ToString().Substring(0, 10) : "Saknar utgång";
                <tr id="@index">
                    <td id="denna" onclick="doStuff(@item.FoodItem.Name, @index)">@item.FoodItem.Name</td>
                    <td id="@index" onclick="changeDate(@index)">@date</td>
                    <td onclick="removeItem(@index)">Ta bort</td>
                </tr>
                index++;
            }
        }
    </table>

    <input type="text" id="datepicker">
    <p id="selectedDateIndex"></p>
</div>

