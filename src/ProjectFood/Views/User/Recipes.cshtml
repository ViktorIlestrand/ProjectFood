@model List<ProjectFood.Models.ViewModels.RecipeVM.RecipeVM>

@{
    ViewData["Title"] = "Recipes";
}

<style>
    body {
        padding-top: 130px;
    }
</style>

<div class="container">
    <div class="col-md-9">
        @{foreach (var item in Model)
            {
                <div class="container">
                    <div class="row">

                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <img src="@item.Picture" alt="">
                                <div class="caption">
                                    <h4 class="pull-right"></h4>
                                    <h4>
                                        <a href="/User/RecipeDetails/@item.RecipeId">@item.Title</a>
                                    </h4>
                                    @Html.Partial("_PrintRecipeShortInfo", item)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    </div>


