<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using ProjectFood.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ProjectFood</title>

    <!-- Custom CSS -->
    <link href="~/css/agency.css" rel="stylesheet" />

    <!-- Bootstrap Core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Fonts -->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css' />

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <!-- Theme CSS -->
    <link href="~/css/agency.min.css" rel="stylesheet" />

    @*<style>
        body {
            background-color: darkseagreen;
        }
    </style>*@
</head>
<body class="bg-light-gray">



    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top" style="background-color:black">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" asp-controller="User" asp-action="MyKitchen">Project Food</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="@(ViewData["Title"].ToString() == "Recipes" ? "active" : "")">
                        <a asp-controller="User" asp-action="Recipes">Recept</a>

                    </li>
                    <li class="@(ViewData["Title"].ToString() == "About" ? "active" : "")">
                        <a asp-controller="Home" asp-action="About">Om oss</a>

                    </li>
                    <li class="@(ViewData["Title"].ToString() == "MyKitchen" ? "active" : "")">
                        <a asp-controller="User" asp-action="MyKitchen">Mitt Kök</a>

                    </li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>

                    @{ if (!SignInManager.IsSignedIn(User))
                        {
                            <li class="@(ViewData["Title"].ToString() == "Login" ? "active" : "")">
                                <a asp-controller="User" asp-action="Login">Logga in</a>
                            </li>

                        }
                        else
                        {
                            <li class="@(ViewData["Title"].ToString() == "LogOut" ? "active" : "")">
                                <a asp-controller="User" asp-action="LogOff" style="font-size:x-small">Logga ut</a>
                            </li>
                        }
                    }

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div>
        @RenderBody()
    </div>


    <script src="~/vendor/jquery/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/OurScripts/JavaScript.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Plugin Tablesorter -->
    @*<script type="text/javascript" src="/path/to/jquery.tablesorter.js"></script>*@
    <script src="~/vendor/jquery/jquery.tablesorter.js"></script>
    <!-- Theme JavaScript -->
    <script src="~/js/agency.min.js"></script>

    <!-- tablesorter widgets (optional) -->
    @*<script type="text/javascript" src="/path/to/jquery.tablesorter.widgets.js"></script>*@
</body>
</html>
